<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center">Do It Yourself Today</h1>
	<hr />

	<% @courses.each do |course| %>
		<h2 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h2>
		<br />
		<div class="col-sm-8 col-xs-12">
			<%= image_tag @course.image, :class => 'img-responsive' %>
			<p><%= course.description %></p>
			<p>
				<span class="label label-default"><%= number_to_currency course.cost %>
				</span>
			</p>
		</div>
		<div class="clr"></div>
		<br /><br />
		<div class="col-sm-4 col-xs-12 text-center">
			<p><%= link_to 'More Details', course_path(course), :class => 'btn btn-primary btn-large' %></p>
		</div>
		<div class="clr"></div>
		<br /><br />
	<% end %>
</div>